# =============================================================================
# Ineco Bank Superset Configuration
# =============================================================================
# Copy this file to .env and update the values
# NEVER commit .env file to Git!

# =============================================================================
# SUPERSET ADMIN USER
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD
ADMIN_EMAIL=admin@ineco.am

# =============================================================================
# SECRET KEY (Generate a secure random key for production!)
# Generate with: openssl rand -base64 42
# =============================================================================
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# =============================================================================
# POSTGRESQL DATABASE (Superset metadata)
# =============================================================================
POSTGRES_DB=superset
POSTGRES_USER=superset
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CELERY_DB=0
REDIS_RESULTS_DB=1

# =============================================================================
# SUPERSET
# =============================================================================
SUPERSET_PORT=8088
LOG_LEVEL=INFO

# =============================================================================
# SECURITY (Enable these in production with HTTPS)
# =============================================================================
SESSION_COOKIE_SECURE=False
